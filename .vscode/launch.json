{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "main",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "justMyCode": false
        },
        {
            "name": "Streamlit Python debug",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "${file}"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Crawler RAG Processing",
            "type": "debugpy",
            "request": "launch",
            "module": "crawler.process_rag",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--batch-size",
                "1",
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Crawler RAG Processing - Full Run",
            "type": "debugpy",
            "request": "launch",
            "module": "crawler.process_rag",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--batch-size",
                "1"
            ],
            "justMyCode": false
        }
    ]
}